<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="boardArea" fx:id="boardArea" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="checkerboard_2.FXMLDocumentController">
   <children>
      <VBox id="vBox" fx:id="vBox" prefHeight="400.0" prefWidth="400.0">
         <children>
            <MenuBar fx:id="menuBar" prefHeight="29.0" prefWidth="389.0">
              <menus>
                <Menu mnemonicParsing="false" text="Grid">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#onExtraLargeSize" text="16 X 16" />
